{	"compileOnSave": true,
	"tabSize": 4,
  "compilerOptions": {
        "outDir": "./static/js/tsoutput",
        "sourceMap": false,
        "noImplicitAny": true,
				"removeComments": false,
				"allowSyntheticDefaultImports": true,
				"module": "commonjs",
				"target": "es6",
        "jsx": "react",
				"lib": ["es2015", "es2016", "es2017", "es5", "es6", "DOM"]
    },
	  "include": [
        "./app/**/*"
    ],
		"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
